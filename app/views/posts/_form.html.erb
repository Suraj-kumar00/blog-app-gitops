<%= form_with(model: post, class: "max-w-3xl mx-auto") do |form| %>
  <% if post.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6" role="alert">
      <h2 class="text-lg font-medium text-red-700 mb-2"><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul class="list-disc pl-5 text-red-600">
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="bg-white rounded-lg shadow-md overflow-hidden p-6 mb-6">
    <div class="mb-6">
      <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary" %>
    </div>

    <div class="mb-6">
      <%= form.label :body, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_area :body, rows: 8, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary" %>
    </div>

    <div class="flex justify-end">
      <%= form.submit class: "bg-primary hover:bg-blue-700 text-white py-2 px-4 rounded font-medium transition" %>
    </div>
  </div>
<% end %>
