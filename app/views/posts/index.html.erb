<p style="color: green"><%= notice %></p>

<h1 class="text-3xl font-bold mb-8 text-gray-800">Blog Posts</h1>

<div id="posts" class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @posts.each do |post| %>
    <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition">
      <div class="p-6">
        <h2 class="text-xl font-semibold text-gray-800 mb-2 truncate"><%= post.title %></h2>
        <p class="text-gray-600 mb-4 line-clamp-3"><%= post.body %></p>
        <%= link_to post, class: "text-primary hover:text-blue-700 font-medium flex items-center transition" do %>
          <span>Read more</span>
          <i class="fas fa-arrow-right ml-2 text-sm"></i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<% if @posts.empty? %>
  <div class="bg-blue-50 rounded-lg p-8 text-center">
    <i class="fas fa-file-alt text-4xl text-blue-400 mb-4"></i>
    <h3 class="text-xl font-medium text-gray-700 mb-2">No posts yet</h3>
    <p class="text-gray-600 mb-4">Get started by creating your first post!</p>
    <%= link_to "Create Post", new_post_path, class: "inline-block bg-primary hover:bg-blue-700 text-white py-2 px-4 rounded font-medium transition" %>
  </div>
<% end %>
