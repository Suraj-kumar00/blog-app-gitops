<div class="max-w-3xl mx-auto">
  <article class="bg-white rounded-lg shadow-md overflow-hidden mb-6">
    <div class="p-8">
      <h1 class="text-3xl font-bold text-gray-800 mb-4"><%= @post.title %></h1>
      <div class="prose max-w-none text-gray-600">
        <%= @post.body %>
      </div>
    </div>
  </article>

  <div class="flex flex-wrap gap-3 mb-8">
    <%= link_to posts_path, class: "inline-flex items-center text-gray-600 hover:text-gray-900 transition" do %>
      <i class="fas fa-arrow-left mr-2"></i> Back to posts
    <% end %>
    
    <%= link_to edit_post_path(@post), class: "inline-flex items-center text-primary hover:text-blue-700 transition" do %>
      <i class="fas fa-edit mr-2"></i> Edit this post
    <% end %>
    
    <%= button_to @post, method: :delete, class: "inline-flex items-center text-red-600 hover:text-red-800 bg-transparent border-0 p-0 cursor-pointer transition", form: { data: { turbo_confirm: "Are you sure you want to delete this post?" } } do %>
      <i class="fas fa-trash-alt mr-2"></i> Delete this post
    <% end %>
  </div>
</div>
